<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="24dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.hallett.bujoass.presentation.widget.ScopeSelectorView
        android:id="@+id/scope_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/task_list"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@+id/scope_selector"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:listitem="@layout/list_item_task"
        android:orientation="vertical"/>

    <Button
        android:id="@+id/new_task_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="new task"
        app:layout_constraintVertical_bias="0.838"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
    <Button
        android:id="@+id/generate_tasks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="generate task"
        app:layout_constraintVertical_bias="0.162"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/new_task_btn" />

</androidx.constraintlayout.widget.ConstraintLayout>